rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function userEmail() {
      return request.auth.token.email;
    }

    function isAdmin() {
      return signedIn() && exists(/databases/$(database)/documents/admins/$(userEmail()));
    }

    match /admins/{email} {
      allow read: if signedIn() && (isAdmin() || userEmail() == email);
      allow create, update, delete: if isAdmin();
    }

    match /devices/{deviceId} {
      allow read, write: if isAdmin();
    }

    match /waitlist/{entryId} {
      allow create: if request.resource.data.consent == true;
      allow read, update, delete: if isAdmin();
    }

    match /events/{eventId} {
      allow read: if signedIn();
      allow create: if signedIn();
      allow update: if isAdmin() || (
        signedIn() &&
        request.resource.data.diff(resource.data).changedKeys().hasOnly(['participants']) &&
        request.resource.data.participants == resource.data.participants + 1
      );
      allow delete: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
